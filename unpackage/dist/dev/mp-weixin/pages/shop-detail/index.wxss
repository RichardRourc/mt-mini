.type {
  display: inline-block;
  vertical-align: top;
  overflow: hidden;
  width: 23%;
  height: 872rpx;
}
.type--item {
  padding: 8rpx 16rpx;
  font-size: 28rpx;
  background-color: #ccc;
  color: #666;
  text-align: center;
  vertical-align: middle;
}
.type--item--on {
  background-color: #fff;
  font-weight: bold;
  position: relative;
}
.type--item--on::after {
  position: absolute;
  content: "";
  display: block;
  border-left: 2px solid #adc;
  top: 24rpx;
  left: 8rpx;
  height: 8rpx;
}

