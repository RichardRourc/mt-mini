
.banner{
	width:96%;
	margin:auto;
	position:relative;
	padding:24rpx 0rpx;
}
.banner > ._img{
	height:180rpx;
	width:100%;
	border-radius:24rpx;
}
.banner .banner__title{
	position:absolute;
	padding:6rpx 8rpx;
	bottom:30rpx;
	right:-8rpx;
	font-size:12rpx;
	color:white;
	background-color: #666;
	opacity:.5;
	border-radius:4rpx;
}

