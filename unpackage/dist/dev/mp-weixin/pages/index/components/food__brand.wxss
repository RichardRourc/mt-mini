.brand {
  width: 96%;
  margin: auto;
}
.brand__head {
  position: relative;
}
.brand .brand__head__image {
  width: 100%;
  height: 180rpx;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.brand__head__image__tag {
  position: absolute;
  top: 0rpx;
  right: 24rpx;
  width: 32rpx;
  height: 48rpx;
  background-color: #acb;
}
.brand__head__bottom {
  position: absolute;
  bottom: -14rpx;
  left: 24rpx;
}
.brand__head__bottom__image {
  display: inline-block;
  width: 102rpx;
  height: 92rpx;
  margin-right: 32rpx;
  margin-top: 12rpx;
  background-color: red;
  border-radius: 12rpx;
}
.brand__head__bottom__right {
  display: inline-block;
  vertical-align: top;
}
.brand__head__bottom__right__description {
  color: white;
  font-weight: 500;
  font-size: 42rpx;
}
.brand__head__bottom__right__price {
  /* text-align:center; */
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding-top: 0rpx;
  margin-left: -88rpx;
}
.brand__foot {
  padding: 24rpx;
  border: 1px solid #ccc;
  border-top: 0px;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
.brand__food__type {
  font-weight: 600;
  padding: 12rpx;
}
.brand__foot__food--wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.brand__food__list {
  display: inline-block;
  width: 32%;
}
.brand__foot__food__image {
  position: relative;
  height: 120rpx;
}
.brand__foot__food__image ._img {
  width: 100%;
  height: 120rpx;
  background-color: green;
  border-radius: 12rpx;
}
.brand__foot__food__name {
  width: 100%;
  position: absolute;
  background-color: #666;
  opacity: .7;
  font-size: 24rpx;
  color: white;
  bottom: 0rpx;
  text-indent: 24rpx;
}
.brand__foot__food__price {
  /* vertical-align: top; */
  margin-top: -12rpx;
}
.brand__food__price-now {
  color: red;
  font-size: 24rpx;
  margin-right: 8rpx;
}
.brand__food__price-origin {
  text-decoration: line-through;
  color: #ccc;
  font-size: 20rpx;
}

